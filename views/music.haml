#primary.grid_12 
  #recent-news.section
    %h2 Listen to tunes

    %ul#albums.clearfix
      -@discography.each do |album|
        %li
          %h3
            %a{:href => "/music/#{album['title'].downcase.gsub(/\s/, '-')}"}= album['title']
          %a{:href => "/music/#{album['title'].downcase.gsub(/\s/, '-')}"}
            %img{:src => album['large_art_url']}
          %h4= Time.at(album['release_date']).strftime("%b %Y")